<form method="post" action="/memos/<%= @memo['id'] %>">
  <main>
    <section>
      <h1>変更画面</h1>
      <div><input type="text" value="<%= h(@memo['title']) %>" name="title" /></div>
      <textarea name="body" ><%= h(@memo['body']) %></textarea>
    </section>
  </main>
  <footer>
    <input type="hidden" name="_method" value="PATCH">
    <input type="submit" value="保存する" />
  </footer>
</form>